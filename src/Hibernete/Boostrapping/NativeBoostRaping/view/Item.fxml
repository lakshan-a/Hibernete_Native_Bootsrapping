        <TextField fx:id="txtItemDes" layoutX="139.0" layoutY="120.0" prefHeight="26.0" prefWidth="345.0" style="-fx-background-color: white; -fx-border-color: #5fc944; -fx-border-radius: 6;" />
        <TextField fx:id="txtItemUnit" layoutX="139.0" layoutY="157.0" prefHeight="26.0" prefWidth="345.0" style="-fx-background-color: white; -fx-border-color: #5fc944; -fx-border-radius: 6;" />
        <TextField fx:id="txtQty" layoutX="139.0" layoutY="195.0" prefHeight="26.0" prefWidth="345.0" style="-fx-background-color: white; -fx-border-color: #5fc944; -fx-border-radius: 6;" />
        <Label layoutX="40.0" layoutY="91.0" text="Item Code :" />
        <Label layoutX="40.0" layoutY="126.0" text="Item Description :" />
        <Label layoutX="40.0" layoutY="165.0" text="Unit Price :" />
        <Label layoutX="40.0" layoutY="200.0" text="Qty.on.Hand :" />
