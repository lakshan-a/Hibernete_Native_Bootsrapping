            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <TableView fx:id="tblItems" layoutX="23.0" layoutY="286.0" prefHeight="200.0" prefWidth="538.0">
            <columns>
                <TableColumn fx:id="colCode" prefWidth="115.0" text="Item Code" />
                <TableColumn fx:id="colDes" prefWidth="189.0" text="Item Description" />
                <TableColumn fx:id="colPrice" prefWidth="112.0" text="Unit Price" />
                <TableColumn fx:id="colQty" prefWidth="121.0" text="Qty.on.Hand" />
            </columns>
        </TableView>
      <Button fx:id="btnSave" layoutX="114.0" layoutY="240.0" mnemonicParsing="false" onAction="#btnSaveOnAction" style="-fx-background-color: #5fc944;" text="Save">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="btnUpdate" layoutX="177.0" layoutY="240.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" style="-fx-background-color: #5fc944;" text="Update">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="btnDelete" layoutX="256.0" layoutY="240.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" style="-fx-background-color: #5fc944;" text="Delete">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="btnSearch" layoutX="328.0" layoutY="240.0" mnemonicParsing="false" onAction="#btnSearchOnAction" style="-fx-background-color: #5fc944;" text="Search">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <ImageView fx:id="imgBack" fitHeight="50.0" fitWidth="58.0" layoutX="41.0" layoutY="14.0" onMouseClicked="#btnBack" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@resources/icons8-back-64 (2).png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
    </children>
